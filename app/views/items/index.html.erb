<h1>Meine Aufgaben</h1>
<%=button_to "Neue Aufgabe", new_item_path, method: :get, class: "btn btn-default"%>
<hr>
<% @items.each do |item| %>
<div class = "row item">

<% if item.completed? %>
<div class = "col-md-6">
<h3><s><%= link_to item.title, item_path(item.id)  %></s></h3>
<p><s><%= item.description %></s></p>
<p><%= time_ago_in_words(item.completed_at) %> ago.</p>
</div>
<div class = "col-md-2">
    
</div>

<% else %>

<div class = "col-md-6">
<h3><%= link_to item.title, item_path(item.id)  %></h3>
<p><%= item.description %></p>
</div>
<div class = "col-md-2">
    <%= link_to complete_item_path(item), method: :patch do %>
     
<h3><i class="fa fa-check" aria-hidden="true"></i></h3>
<% end %>
</div>

<% end %>

</div>
<hr>
<% end %>

